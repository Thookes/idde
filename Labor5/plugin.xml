<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="edu.ubb.cs.idde.rcpclient.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="edu.ubb.cs.idde.rcpclient.Perspective"
            id="rcp-client.perspective"
            closeable="false">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="View"
            class="edu.ubb.cs.idde.rcpclient.view.View"
            id="rcp-client.view"
            >
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               standalone="true"
               minimized="false"
               relative="org.eclipse.ui.editorss"
               relationship="left"
               id="rcp-client.view">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
		<command
			commandId="rcp-client.show"
			label="Show"
			style="push">
		</command>
        
        <menu label="Languages">
            <command
				commandId="rcp-client.english"
				label="English"
				style="push">
            </command>
            <command
				commandId="rcp-client.hungarian"
				label="Hungarian"
				style="push">
            </command>
         </menu>
		
		<command
			commandId="rcp-client.exit"
			label="Exit"
			style="push">
		</command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
		<command
			defaultHandler="edu.ubb.cs.idde.rcpclient.command.Show"
			id="rcp-client.show"
			name="Show">
		</command>
		<command
			defaultHandler="edu.ubb.cs.idde.rcpclient.command.i18n.English"
			id="rcp-client.english"
			name="English">
		</command>
		<command
			defaultHandler="edu.ubb.cs.idde.rcpclient.command.i18n.Hungarian"
			id="rcp-client.hungarian"
			name="Hungarian">
		</command>
		<command
            defaultHandler="edu.ubb.cs.idde.rcpclient.command.Exit"
            id="rcp-client.exit"
            name="Exit">
      	</command>
   </extension>

</plugin>
